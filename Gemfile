source :rubygems

gem 'sinatra' #Libreria HTTP
gem 'rest-client'
gem 'json'
gem 'shotgun'
gem 'heroku'

#ORM - Object Relational Mapping
gem 'datamapper'
gem 'dm-migrations'
gem 'dm-core'
gem 'dm-timestamps'
gem 'omniauth-facebook'

#Authentication
gem 'sinatra_omniauth'

group :development do
  gem 'dm-sqlite-adapter'
end

group :production do
  gem 'dm-postgres-adapter'
end